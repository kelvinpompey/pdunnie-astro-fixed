---
import { PlusIcon } from '../components/Icons';

interface Props {
  name: string;
  price: number;
  image: string;
  description: string;
}

const { name, price, image, description } = Astro.props;
---

<div class="group relative">
  <div class="aspect-square overflow-hidden bg-gray-100">
    <img
      src={image}
      alt={name}
      class="h-full w-full object-cover object-center group-hover:scale-105 transition-transform duration-300"
    />
    <button class="absolute bottom-4 right-4 bg-primary text-white p-3 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300">
      <PlusIcon client:load />
    </button>
  </div>
  <div class="mt-4">
    <h3 class="text-lg font-serif">{name}</h3>
    <p class="text-sm text-gray-600 mt-1">{description}</p>
    <p class="text-accent font-medium mt-2">${price}</p>
  </div>
</div>